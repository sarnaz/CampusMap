<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingTop="?attr/actionBarSize">

    <ScrollView
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        android:gravity="center|top"
        tools:context=".HomeFragment"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="-189dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya_sans_bold"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColor="#D4AF37"
                android:textSize="66sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="354dp"
                android:layout_margin="20dp"
                android:layout_marginBottom="0dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"

                        android:textColor="#FDF2D8"
                        android:textSize="26sp" />

                    <LinearLayout
                        android:id="@+id/overviewContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="#FDF2D8"
                            android:textSize="21dp" />

                        <TextView
                            android:id="@+id/temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#00FFFFFF"
                            android:fontFamily="sans-serif-thin"
                            android:textColor="#FDF2D8"
                            android:textSize="90dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/temp_min"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FDF2D8"
                                android:textSize="16dp" />

                            <Space
                                android:layout_width="50dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/temp_max"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FDF2D8"
                                android:textSize="16dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/weathericonc"
                                android:layout_width="240dp"
                                android:layout_height="235dp"
                                android:contentDescription="icon for weather"></ImageView>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Bus Timings"
                    android:textColor="#FDF2D8"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/nextBus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="2dp"
                    android:textColor="#FDF2D8"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/busLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:paddingBottom="15dp"
                    android:textColor="#FDF2D8"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/bus_website_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go to bus website"
                    android:textColor="#FDF2D8"
                    android:textSize="20sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <!-- Your existing timetable code -->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/timetable_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="75dp"
                    android:layout_marginRight="50dp"
                    android:src="@drawable/timetable_icon_app" />


                <ImageView
                    android:id="@+id/samis_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="75dp"
                    android:src="@drawable/_583d5467d5d7ee6a1e078c4c00297c1__university_of_bath_bath_uk" />
            </LinearLayout>

            <Space
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
